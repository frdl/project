{
	"name": "frdl\/project",
	"type": "project",
	"description": "Kickstarter boilerplate to be used by `composer create-project` command. Demo/Test Application. ",
	"license": ["MIT"],
	"homepage" : "https://github.com/frdl/project",
	"repositories": [{
		"type": "composer",
		"url": "https:\/\/packages.frdl.de"
	}],
	"require": {
		"php": ">=7.2",
		"frdl\/frdlweb-composer-installers": "*"
	},
        "require-dev": {
            "frdl/remote-psr4" : "*",
	    "frdl/console" : "*",
	    "frdl/cronjobs" : "*",
	    "roave/security-advisories": "dev-master",
	    "frdl/frdlweb-software-support" : "*",
	    "symfony/finder" : "^5.1",
	    "symfony/filesystem" : "^5.1"		
        },	
    "extra": {
		"class": "Webfan\\Support\\ComposerInstallersExtender\\Plugin",
		"installer-types": ["frdl-theme", "frdl-module", "frdl-httpdocs", "frdl-public", "vendor", "frdl-extension"],
		"installer-paths": {
			"modules\/{$vendor}.{$name}\/": ["type:frdl-module", "type:frdl-extension"],
			"themes\/{$vendor}\/{$name}\/": ["type:frdl-theme"],
			"web\/{$vendor}\/{$name}\/": ["type:frdl-httpdocs"],
			"{$webroot}\/": ["type:frdl-public"],
			"vendor\/frdlweb\/{$vendor}\/{$name}\/": ["vendor:frdl", "vendor:frdlweb", "vendor:webfan", "vendor:webfan3"]
		},
       "dependency-scripts": {      
		    "run": true,     
		    "trust": [ 
				"symfony",
				"symfony/symfony",
				"symfony/console",
				"frdl",
				"frdl/console"
			],
			"types" : [	
				"frdl-module",		 
				"frdl-theme",		 
				"frdl-httpdocs",	 
				"frdl-public",		 
				"frdl-project",		  
				"frdl-extension"				
			],
			"exclude"  : [
							
			]
	   }			
     },	
	"config": {
		"use-include-path": true,
		"sort-packages": true,
		"preferred-install": "auto",
		"cache-files-ttl": 3600,
		"prepend-autoloader": true,
		"platform": {
			"php": "7.2.23"
		}
	},
	"autoload": {
		"psr-4": {
			"compiled\\": "compiled\/"
		}
	},  
       "suggest" : {
	 "frdl/web": "Useful and helpers...",  
	 "frdl/endpoint": "Frdlweb project deployment frontend server",	
	 "frdl/workspace": "Frdlweb project development",	
         "frdl/cms" : "A collection of packages recommended for a content management system based on Frdlweb",
	 "frdl/frdlweb-cms-db" : "Most of the frdl-module/frdl-theme packages require this Database Module",
	 "frdl/nav" : "Add Navigation Menus to your Frdlweb Project",
	 "frdl/auth-webfan" : "Login and User Registration Management",
	 "frdl/cronjobs" : "Service and Maintenance Tasks...",
	 "frdl/frdlweb-software-support" : "Development, Installation, Building, Deploying, Meta..."      
       },
	    
       "scripts": {
        "fix": "vendor/bin/phpcbf",
        "lint": "vendor/bin/phpcs",
        "test": [
		    "vendor/bin/phpunit",
		    "@frdlweb frdl:test" 			
		],
		"frdlweb":  "vendor/bin/frdlweb",
		"frdl" : "@php vendor/bin/frdl",
			
        "pre-package-install": "Webfan\\Support\\ComposerInstallersExtender\\PackageUpdater::processPackageEvent",
        "post-package-install": "Webfan\\Support\\ComposerInstallersExtender\\PackageUpdater::processPackageEvent",
        "pre-package-update": "Webfan\\Support\\ComposerInstallersExtender\\PackageUpdater::processPackageEvent",
        "post-package-update": "Webfan\\Support\\ComposerInstallersExtender\\PackageUpdater::processPackageEvent",
        "pre-package-uninstall": "Webfan\\Support\\ComposerInstallersExtender\\PackageUpdater::processPackageEvent",
        "post-package-uninstall": "Webfan\\Support\\ComposerInstallersExtender\\PackageUpdater::processPackageEvent",
			
        "post-update-cmd": [
			"Webfan\\Support\\ComposerInstallersExtender\\PackageUpdater::processCommandEvent"
		],
        "post-install-cmd": [
            "Webfan\\Support\\ComposerInstallersExtender\\PackageUpdater::processCommandEvent"
        ],
        "post-autoload-dump": [
            "Webfan\\Support\\ComposerInstallersExtender\\PackageUpdater::processCommandEvent"
        ],			
	"post-root-package-install": [
            "Webfan\\Support\\ComposerInstallersExtender\\PackageUpdater::processCommandEvent"
        ],
        "post-create-project-cmd": [
	    "Webfan\\Support\\ComposerInstallersExtender\\PackageUpdater::processCommandEvent"
        ],
	       
